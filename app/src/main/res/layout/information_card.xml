<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/android_default_top_bottom_padding"
    app:contentPaddingBottom="@dimen/android_default_top_bottom_padding"
    app:contentPaddingLeft="@dimen/android_default_left_right_padding"
    app:cardCornerRadius="0dp"
    app:contentPaddingRight="@dimen/android_default_left_right_padding"
    app:contentPaddingTop="@dimen/android_default_top_bottom_padding">

    <TextView
        android:id="@+id/information_text"
        android:layout_width="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/information_action"
        android:src="@drawable/ic_autorenew_black_24dp"
        android:layout_width="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="end|center_vertical"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>